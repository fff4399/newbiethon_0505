            <ul class="nav navbar-nav">
                <li class="nav-item active"><a href="/" class="nav-link">Home</a></li>
                <!--Join-->
                
                  <% if user_signed_in? %>
                        
                    <% else %>
                        <!--login-->
                        <li class="nav-item"><%= link_to "로그인", user_session_path %></li>
                        <!--join-->
                        <li class="nav-item"><%= link_to "회원가입", "/users/sign_up" %></li>
                  <% end %>
                <!--show_album-->
                <li class="nav-item"><a href="/home/see_meeting" class="nav-link">모임보기</a></li>
                
                <li class="nav-item"><a href="/home/album" class="nav-link">지난앨범</a></li>
                

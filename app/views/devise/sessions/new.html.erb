
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="container">
      <div class="col">
        <div class="page-header">
          <h1>로그인 <small>멋사 친해지길 바래!</small></h1>
        </div>
      
        <div class="col-md-1 ">
        </div>
        <div class="col-md-4 col-md-offset-3">
          <div class="login-box well">
              <legend>로그인</legend>
              <div class="field">
                <label for="username-email">이메일 or 아이디</label><br>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'inputStyle' %>
              </div>
              <br>
              <div class="field">
                  <label for="password">비밀번호</label><br>
                  <%= f.password_field :password, autocomplete: "current-password", :class => 'inputStyle' %>
              </div>
              <div class="action"><br>
                  <%= f.submit "로그인", :class => 'btn btn-default btn-block m-t-md' %>
              </div>
              <br>
              
              <div class="form-group">
                  <a href="/users/sign_up" class="btn btn-default btn-block m-t-md"> 회원가입</a>
              </div>
          </div>
        </div>
      </div>
    </div>
    
    
    
    
    
    
    
    
    
    
    
    
    


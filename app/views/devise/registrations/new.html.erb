<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>  
  
  <div class="container">
      <div class="col">
        <div class="page-header">
          <h1>회원가입 <small>멋사 친해지길 바래!</small></h1>
        </div>
        <div class="col-md-1 ">
        </div>
        <div class="col-md-4 col-md-offset-3">
          <div class="login-box well">
            <legend>회원가입</legend>
            <div class="form-group field">
                <label for="username-email">이름</label><br>
                <%= f.text_field :name, autofocus: true, :class => 'inputStyle' %>
            </div>
            <div class="form-group field">
                <label for="username-email">학교이름</label><br>
                <%= f.text_field :school, autofocus: true, :class => 'inputStyle'  %>
            </div>
            <div class="form-group field">
                <label for="username-email">이메일</label><br>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'inputStyle' %>
            </div>
            <div class="form-group field">
                <label for="password">비밀번호</label><br>
                <label for="password">6자리이상</label><br>
                <%= f.password_field :password, autocomplete: "new-password", :class => 'inputStyle' %>
            </div>
            <div class="form-group field">
                <label for="password">비밀번호 확인</label><br>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'inputStyle' %>
            </div>
            
            <div class="actions">
                <%= f.submit "회원가입", :class => 'btn btn-default btn-block m-t-md joinButton' %>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>















